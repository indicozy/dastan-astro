---
const { pokemon } = Astro.props;
const image = pokemon.sprites.front_default
const {stats} = pokemon
---

<div class="bg-[#eee] p-5 border border-[#333]">
  <img src={image} />
  <p class="font-bold text-2xl">{pokemon.name}</p>
  <div>
{stats.map((stat)=> <div><span class="text-red-700">{stat.stat.name}</span>: {stat.base_stat}</div>)}
  </div>
</div>
